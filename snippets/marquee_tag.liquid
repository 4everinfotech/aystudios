{% if shop.metafields.n_scrolling_text.scrolling_text != blank %}
{% assign scrolling_text = shop.metafields.n_scrolling_text.scrolling_text %}
{% else %}
{% assign scrolling_text = "Please Enter Text" %}
{% endif %}

{% if shop.metafields.n_scrolling_text.sec_order != blank %}
{% assign sec_order = shop.metafields.n_scrolling_text.sec_order %}
{% else %}
{% assign sec_order = 0 %}
{% endif %}
<section class="vertical-scrolling h-100  {{section_number}}" style="order: {{sec_order}};">
  <div class="container-fluid h-100 px-0">
    <div class="row pl-50 pr-50 pl-lg-0 pr-lg-0 no-gutters align-items-center mobile_min-vh-40 min-vh-100">
      {% if request.host == "jamesay-dk.myshopify.com" or request.host == "aystudios.dk" %}
        {% assign all_collection_link = "/collections/alle" %}
      {% else %}
        {% assign all_collection_link = "/collections/all" %}
      {% endif %}
      <div class="col-12">
        <div class="marquee-wrapper d-none d-lg-block">
          <a href="{{all_collection_link}}" class="marquee-content fs60">
            <span>{{scrolling_text}}</span>
            <span>{{scrolling_text}}</span>
          </a>
        </div>
        <a href="{{all_collection_link}}" class="fs60 d-lg-none">{{scrolling_text}}</a>
      </div>
  </div>
</section>